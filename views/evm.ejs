<html>
    <head>
        <title>
            evm
        </title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        
        <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css" rel="stylesheet" />
  <!-- MDB -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

        <script>
            function fun()
            {
                alert('vote confirm')
            }
        </script>
        
    </head>
    <body style="background-color: #1e3f5c;">
        <div style="padding-top: 150px;"> 
            <div class="container" style="background-color: white;border-radius: 20px;">
                <div style="padding: 10px;">
                    <div class="table-responsive">
                    <table class="table table-bordered" style="width: 100%;">
                        <thead class="thead-dark">
                          <tr>
                            <th scope="col">S No</th>
                            <th scope="col">Party ID</th>
                            <th scope="col">Party Name</th>
                            <th scope="col">candidatename</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody class="thead-light">
                          <% data.map((item,index)=>{ %>
                          <tr>
                            <td scope="row"><%=index+1 %></td>
                            <td scope="row"><%=item.partyid %></td>
                            <td scope="row"><%=item.partyname%></td>
                            <td scope="row"><%=item.candidatename %></td>
                            <td scope="row">
                                <form action="/vote" method="post">
                                    <button onclick="fun()" class="btn btn-primary" name="votelist" value="<%= item.partyid %>#<%=item.partyname%>#<%=item.candidatename%>#<%=voterid%>#<%=votername%>" >Vote</button>
                                </form>
                            </td>
                          </tr>
                          <% }) %>
                        </tbody>
                      </table>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>